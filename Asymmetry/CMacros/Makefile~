C++ = g++

ROOTFLAGS = $(shell root-config --cflags)
ROOTLIBS  = $(shell root-config --libs)

Target = Plotter.exe SmallAngleApprox.exe

all:$(Target)

Plotter.exe: Plotter.C
	${C++} -o $@ Plotter.C $(Objects) $(ROOTFLAGS) $(ROOTLIBS)

SmallAngleApprox.exe: SmallAngleApprox.C
	${C++} -o $@ SmallAngleApprox.C $(Objects) $(ROOTFLAGS) $(ROOTLIBS)

clean:
	rm *exe
